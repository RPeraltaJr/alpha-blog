<%= render 'shared/errors', obj: @category %>

<div class="form-wrapper">
  
  <!-- Form Helpers: http://guides.rubyonrails.org/form_helpers.html -->
  <!-- *Edit: Since this is a Model backed form, Rails will prefill data to the form from the database -->
  <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <% end %>

</div>

<div class="col-sm-12 text-center">
  <span class="cancel-link">[ <%= link_to "Cancel request and return to categories listing", categories_path %> ]</span>
</div>