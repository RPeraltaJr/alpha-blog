<section class="show articles">
  <div class="container">
    
    <div class="col-md-12">
      <h1 class="title text-primary">Listing All Categories</h1>
    </div>
    
    <div class="col-md-12 text-center">
      
      <%= will_paginate %>
      
      <% @categories.each do |category| %>
      
        <h2> <%= link_to "#{category.name}", category_path(category) %> </h2>
        <p><%= pluralize(category.articles.count, "article") %></p>
        <br></hr>
      
      <% end %>
      
      <%= will_paginate %>
      
    </div>

  </div> <!-- /.container -->
</section>