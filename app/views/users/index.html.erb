<section class="blog-wrapper">
  <div class="container">
    <h2>Alpha <b>Bloggers</b></h2>
    
    <div class="row-page row">
      
      <div class="paginate top">
        <center><%= will_paginate %></center> <!-- Display pagination -->
      </div>
      
      <div class="users">
      
        <% @users.each do |user| %>
        
          <div class="col-md-3 user">
            <div class="box text-center">
              <div class="col-md-5 left">
                <center><%= link_to gravatar_for(user), user_path(user) %></center>
              </div>
              <div class="col-md-7 right">
                <div class="content text-left">
                  <h3> <%= link_to user.username, user_path(user) %> </h3>
                  <p><%= pluralize(user.articles.count, "article") %></p>
                </div>
              </div>
            </div>
            
            <div class="article-actions btn-group btn-group-justified users">
              <% if logged_in? and current_user.admin? %>
                <%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all their articles?" },class: "btn btn-md btn-primary" %>
              <% end %>
            </div> 
            
          </div>
    
        <% end %>
    
      </div>
      
      <div class="paginate bottom">
        <center><%= will_paginate %></center> <!-- Display pagination -->
      </div>
      
    </div>

  </div> <!-- /.container -->
</section>