<!-- Form Helpers: http://guides.rubyonrails.org/form_helpers.html -->
<!-- *Edit: Since this is a Model backed form, Rails will prefill data to the form from the database -->
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :username %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :email %>
  </div>
  <div class="col-sm-8">
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :password %>
  </div>
  <div class="col-sm-8">
    <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-8 col-sm-offset-2">
    <!-- If user is a new record, then return "Sign Up". Otherwise, "Update Account" -->
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary btn-lg") %>
  </div>
</div>
<% end %>

<div class="col-sm-4 col-sm-offset-7">
  [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
</div>