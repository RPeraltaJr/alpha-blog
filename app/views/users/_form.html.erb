<div class="form-wrapper">
  <!-- Form Helpers: http://guides.rubyonrails.org/form_helpers.html -->
  <!-- *Edit: Since this is a Model backed form, Rails will prefill data to the form from the database -->
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-12">
        <!-- If user is a new record, then return "Sign Up". Otherwise, "Update Account" -->
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary btn-lg btn-block") %>
      </div>
    </div>
    
  <% end %>

</div> <!-- /.form-wrapper -->

<div class="col-sm-12 text-center">
  <span class="cancel-link">[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]</span>
</div>