<h1>Listing all articles</h1>

<!-- Use `rake routes` to find Prefixes for URL -->
<p><%= link_to "Create new article", new_article_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  
  <% @articles.each do |article| %>
  
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td> <!-- article OR article.id both work -->
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
    
  <% end %>
  
</table>