<section class="list articles">
  <div class="container">
    <div class="col-md-12">

      <h1 class="title">Listing all articles</h1>
      
      <!-- Use `rake routes` to find Prefixes for URL -->
      <p><%= link_to "Create new article", new_article_path %></p>
      
      <table>
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>
        
        <% @articles.each do |article| %>
        
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td> <!-- article OR article.id both work -->
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
          
        <% end %>
        
      </table>
      
    </div> <!-- /.col-md-12 -->
  </div> <!-- /.container -->
</section>