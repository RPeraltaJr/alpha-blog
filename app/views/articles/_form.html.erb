<%= render 'shared/errors', obj: @article %>

<div class="form-wrapper edit">
    
    <!-- Form Helpers: http://guides.rubyonrails.org/form_helpers.html -->
    <!-- *Edit: Since this is a Model backed form, Rails will prefill data to the form from the database -->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-12">
          <label>Categories</label><br>
          <!-- Loop and display checkboxes for All Categories -->
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text } %>
          <% end %>
        </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.submit class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
    
    <% end %>
    
</div>

<div class="col-sm-12 text-center">
    <span class="cancel-link">[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]</span>
</div>